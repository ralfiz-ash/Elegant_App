<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9F8E5"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="Signin"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_uname"
        app:layout_constraintStart_toStartOf="@+id/txt_uname"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_uname"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/sback"
        android:ems="10"
        android:hint="Enter your Register number"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0E5112"
        android:text="signin"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/txt_uname"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/txt_uname"
        app:layout_constraintTop_toBottomOf="@+id/txt_uname" />
</androidx.constraintlayout.widget.ConstraintLayout>