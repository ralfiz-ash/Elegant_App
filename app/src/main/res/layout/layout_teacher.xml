<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    android:background="@drawable/container">

    <View
        android:id="@+id/outline"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_margin="4dp"
        android:background="#2196F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:text="Staff name"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/outline"
        app:layout_constraintStart_toStartOf="@id/outline" />

    <ImageView
        android:id="@+id/tutorImage"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/outline"
        app:layout_constraintEnd_toEndOf="@id/outline"
        app:layout_constraintStart_toStartOf="@id/outline"
        app:layout_constraintTop_toTopOf="@id/outline" />

    <TextView
        android:id="@+id/tvIncharge"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/amaranth"
        android:text="10,9,8"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/outline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvqualification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/amaranth"
        android:text="Qualification"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvIncharge"
        app:layout_constraintTop_toBottomOf="@+id/tvIncharge" />

    <TextView
        android:id="@+id/tvMedium"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/amaranth"
        android:text="Medium"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvIncharge"
        app:layout_constraintTop_toBottomOf="@+id/tvqualification" />

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:autoLink="phone"
        android:fontFamily="@font/amaranth"
        android:text="9567563300"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvIncharge"
        app:layout_constraintTop_toBottomOf="@+id/tvMedium" />

</androidx.constraintlayout.widget.ConstraintLayout>